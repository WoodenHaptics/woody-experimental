# compiler
CC      ?= clang
CXX     ?= clang++
COMPILER = $(CC)

# common compiler flags
CFLAGS   += -DMACOSX -arch $(ARCH)
CXXFLAGS += -DMACOSX -arch $(ARCH) -std=c++0x -stdlib=libc++

# shared library definition
SHARED_NAME = lib$(ROOT_NAME).so.$(MAJOR).$(MINOR).$(RELEASE).dylib
SHARED_OPT  = -dynamiclib -Wl,-dylib_install_name -Wl,$(SHARED_NAME) -framework IOKit -framework CoreFoundation
LIB_SHARED  = $(LIB_DIR)/$(SHARED_NAME)

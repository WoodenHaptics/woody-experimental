# global path
TOP_DIR = .

# common settings
include Makefile.common

# directories
SRC_DIR   = $(TOP_DIR)
OBJ_DIR   = $(TOP_DIR)/obj/$(CFG)/$(OS)-$(ARCH)-$(COMPILER)/shared

# source files
VPATH     = $(SRC_DIR)
SOURCES   = $(wildcard $(SRC_DIR)/*.cpp)

# include external libraries
CXXFLAGS += -I$(CHAI3D_DIR)/src
CXXFLAGS += -I$(GLEW_DIR)/include
CXXFLAGS += -I$(EIGEN_DIR)

# headers
INCLUDES  = $(wildcard $(INC_DIR)/d*.h)

# cross-platform build (shared lib)
OBJECTS   = $(patsubst %.cpp, $(OBJ_DIR)/%.o, $(notdir $(SOURCES)))


# build rules

all: lib

lib: $(LIB_SHARED)

$(LIB_SHARED): $(OBJECTS) | $(LIB_DIR)
	$(CXX) $(CXXFLAGS) $(SHARED_OPT) -o $(LIB_SHARED) $+

$(OBJECTS): $(INCLUDES) | $(OBJ_DIR)

$(LIB_DIR) $(OBJ_DIR):
	mkdir -p $@

$(OBJ_DIR)/%.o : %.cpp
	$(CXX) $(CXXFLAGS) -fPIC -fno-common -c -o $@ $<

clean:
	-rm -f $(OBJECTS) *~
	-rm -rf $(LIB_DIR) $(OBJ_DIR)

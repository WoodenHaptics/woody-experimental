# location of top level directory (note: no trailing '/')
TOP_DIR = .
SRC_DIR = $(TOP_DIR)/src
OBJ_DIR = $(TOP_DIR)/obj/$(CFG)/$(OS)-$(ARCH)-$(COMPILER)
include Makefile.common

# targets
SOURCES    = $(wildcard $(SRC_DIR)/*.cpp)
OBJECTS    = $(patsubst %.cpp, $(OBJ_DIR)/%.o, $(notdir $(SOURCES)))
INCLUDES   = $(wildcard $(INC_DIR)/*.h)

# examples
SUBDIRS = examples

# target rules
all: $(SUBDIRS)

lib: $(LIB_TARGET)

$(LIB_TARGET): $(OBJECTS) | $(LIB_DIR)
	$(AR) $(ARFLAGS) $(LIB_TARGET) $?

$(OBJECTS): $(INCLUDES) | $(OBJ_DIR)

$(LIB_DIR) $(OBJ_DIR):
	mkdir -p $@

$(SUBDIRS): chai3d lib
	$(MAKE) -C $@

chai3d:
	$(MAKE) -C $(CHAI3D) lib

.PHONY: chai3d $(SUBDIRS)
	
# object file compilation
$(OBJ_DIR)/%.o : $(SRC_DIR)/%.cpp
	$(CXX) $(CXXFLAGS) -c -o $@ $<

clean:
	@for T in $(SUBDIRS); do make -C $$T $@; done
	-rm -f $(OBJECTS) $(LIB_TARGET) *~
	-rm -rf $(LIB_DIR) $(OBJ_DIR)
